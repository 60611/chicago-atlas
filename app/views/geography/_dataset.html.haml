.span7
  - chart_stats = fetch_chart_data(dataset.id, @geography.id, dataset.stat_name)
  - chart_id = "chart_#{dataset.id}_#{dataset.stat_name.parameterize.underscore.to_sym}"

  .chart{:id => chart_id}
  - content_for :javascripts do
    
    :javascript
      $(function () {

        var seriesData = [{
          color: colorHash[(#{dataset.id} % 7)],
          type: 'column',
          data: #{chart_stats[:data]},
          name: "#{dataset.stat_name}",
          lineWidth: 4
        },{
          name: 'Confidence interval',
          type: 'errorbar',
          data: #{chart_stats[:error_bars]},
          tooltip: {
            pointFormat: '(Confidence interval: {point.low}-{point.high} mm)<br/>'
          }
        }];


        ChartHelper.create("#{chart_id}", "line", "", seriesData, Date.UTC(#{chart_stats[:start_year]}, 0, 1), "year", null);
      });

.clearfix