<div class="container container-table">
    <div class="row vertical-center-row">
        <div class="col-sm-6 col-md-4 col-md-offset-4 ">

            <div class="account-wall">
                <%= image_tag ("logo_small.png"), class: "profile-img" %>
                <%= form_for(resource, as: resource_name, :html => {:class=>"form-signin"}, url: session_path(resource_name )) do |f| %>
                  <%= f.email_field :email, autofocus: true, required: true, :class=> "form-control", :placeholder=>"admin@chicagohealth.org"%>
                  <%= f.password_field :password, autocomplete: "off", :class=> "form-control", :placeholder=>"Password"%>
                  <%= f.submit "Log in", :class=>"btn btn-lg btn-primary btn-block"%>
                <% end %>
                <%= render "devise/shared/links" %>
            </div>
            <div class="container">
              <% flash.each do |key, value| %>
              <% puts "@@@@@@@@@@@@@@@@@@" %>
              <% puts key %>
              <% if key == "warning" || key == "danger" || key == "alert" %>
                  <div class="alert  alert-<%= key %>">
                    <%= value %>
                  </div>
              <% end %>
              <% end %>
            </div>

        </div>
    </div>
</div>
