<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Sign in Only For Chicago Health Admins</h1>
            <div class="account-wall">
                <%= image_tag ("logo_small.png"), class: "profile-img" %>
                <%= form_for(resource, as: resource_name, :html => {:class=>"form-signin"}, url: session_path(resource_name )) do |f| %>
                  <%= f.email_field :email, autofocus: true, required: true, :class=> "form-control", :placeholder=>"admin@chicagohealth.org"%>
                  <%= f.password_field :password, autocomplete: "off", :class=> "form-control", :placeholder=>"Password"%>
                  <% if devise_mapping.rememberable? -%>
                    <div class="form-group">
                        <div class="checkbox">
                          <label>
                            <%= f.check_box :remember_me %> Remember me
                          </label>
                      </div>
                    </div>
                  <% end -%>
                  <%= f.submit "Log in", :class=>"btn btn-lg btn-primary btn-block"%>
                <% end %>
            </div>
            <a href="#" class="text-center new-account">Create an account </a>
        </div>
    </div>
</div>




<div class="row text-center">
  <h2> Login </h2>
</div>


<%= form_for(resource, as: resource_name, :html => {:class=>"form-horizontal"}, url: session_path(resource_name )) do |f| %>
  <div class="form-group">

  </div>

  <div class="form-group">
    <%= f.label :password%>
    <%= f.password_field :password, autocomplete: "off", :class=> "form-control", :placeholder=>"Password"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
        <div class="checkbox">
          <label>
            <%= f.check_box :remember_me %> Remember me
          </label>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
      <%= f.submit "Log in", :class=>"btn btn-default"%>
  </div>

<% end %>

