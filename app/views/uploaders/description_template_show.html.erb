<div class="container">
  <div class="col-xs-12">
    <% if @uploaders.count > 0 %>
    <br>
    <h1>Description Template
      <a  onClick="window.location.reload()" class="btn btn-primary btn-sm">
        refresh <i class="fa fa-refresh" aria-hidden="true"></i>
      </a>
    </h1>
    <br>
    <table class="table table-striped table-hover uploaders">
      <thead>
        <tr>
          <!-- <th>Id</th> -->
          <th>File</th>
          <th>Status</th>
          <th>Total</th>
          <th>Processed</th>
          <!-- <th>Show</th> -->
          <th><!--View--></th>
          <th><!--Edit--></th>
          <th><!--Destroy--></th>
        </tr>
      </thead>

      <tbody>
        <% @uploaders.each do |uploader| %>
          <tr>
            <!-- <td><%= uploader.id %></td> -->
            <td>
              <a class="btn btn-primary btn-sm" href="<%= uploader.path %>">
                <%= uploader.name %>
                <i class="fa fa-download" aria-hidden="true"></i>
              </a>
            </td>
            <td><%= uploader.status %></td>
            <td><%= uploader.total_row %></td>
            <td><%= uploader.current_row %></td>
            <td><%= link_to 'View Data', description_template_index_uploaders_path, class: 'btn btn-primary btn-xs'  %></td>
            <td><%= link_to 'Replace', edit_uploader_path(uploader), class: 'btn btn-primary btn-xs', remote: true %></td>
            <td><%= link_to '<i class="glyphicon glyphicon-remove-circle"></i>'.html_safe, uploader, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <% else %>
    <h1>Add your Description Template File</h1>
    <br>
      <%= link_to "Upload New File <i class='fa fa-2 fa-cloud-upload' aria-hidden='true'></i>".html_safe , new_description_template_uploaders_path, remote: true, class: "btn-custom" %>
    <% end %>
  </div>
</div>
